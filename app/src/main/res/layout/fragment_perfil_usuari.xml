<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.norriors.java.mtbfreeride.Controllers.PerfilUsuariFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <com.norriors.java.mtbfreeride.Controllers.MLRoundedImageView
                android:id="@+id/imgUser"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:enabled="false" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/txtNom"
                android:layout_margin="20dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:enabled="false"
                android:inputType="text"
                android:background="@drawable/customapptheme_edit_text_holo_light" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/txtPrimerCognom"
                android:layout_margin="20dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:enabled="false"
                android:inputType="text"
                android:background="@drawable/customapptheme_edit_text_holo_light" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/txtSegonCognom"
                android:layout_margin="20dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:enabled="false"
                android:inputType="text"
                android:background="@drawable/customapptheme_edit_text_holo_light" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/txtEmail"
                android:layout_margin="20dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:enabled="false"
                android:inputType="textEmailAddress"
                android:background="@drawable/customapptheme_edit_text_holo_light" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Canviar Contrasenya"
                android:id="@+id/btnChangePass"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/txtPass"
                android:layout_margin="20dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:enabled="false"
                android:inputType="textPassword"
                android:background="@drawable/customapptheme_edit_text_holo_light"
                android:visibility="gone"
                android:hint="Nova Contrasenya"/>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
